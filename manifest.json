{
  "name": "astro exten tailwind mod",
  "version": "0.2.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "landing.html",
    "default_icon": "/assets/icon.png"
  },
  "icons": {
    "128": "/assets/icon.png"
  },
  "host_permissions": ["http://*/*", "https://*/*", "*://localhost/*"],
  "permissions": [
    "notifications",
    "tabs",
    "management",
    "cookies",
    "storage",
    "activeTab",
    "system.memory",
    "system.display",
    "system.cpu",
    "browsingData",
    "desktopCapture",
    "tabCapture",
    "identity",
    "input",
    "windows",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable":{
    "matches":[
      "*://localhost/*",
      "http://127.0.0.1:5500/index.html"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "devtools_page": "devtools.html"
}
